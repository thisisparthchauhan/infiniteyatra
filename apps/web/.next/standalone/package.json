{
    "name": "infinite-yatra-monorepo",
    "version": "0.0.1",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "npm run dev --workspaces --if-present",
        "build": "npm run build -w apps/web",
        "start": "npm run start -w apps/web",
        "test": "npm run test --workspaces --if-present"
    },
    "devDependencies": {
        "prettier": "^3.0.0",
        "typescript": "^5.0.0"
    }
}